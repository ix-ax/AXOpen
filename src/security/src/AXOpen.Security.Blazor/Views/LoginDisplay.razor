@using Microsoft.AspNetCore.Mvc
@using AxOpen.Security.Entities
@attribute [IgnoreAntiforgeryToken]
@namespace AxOpen.Security.Views
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            </svg>
                            @context.User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="Identity/Account/Manage" style="margin-left: 0;">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                               <form class="form-inline" asp-area="Identity" action="Identity/Account/Logout" asp-route-returnUrl="/" method="post">
                                    <button class="dropdown-item" type="submit">Log out</button>                                    
                                </form>
                                

                              @* <button class="dropdown-item" @onclick="LogOut">Log out</button>*@
                                
                            </li>
                        </ul>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <a class="btn btn-primary" href="Identity/Account/Login" role="button">Log in</a>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</nav>


@code
{
    [Inject]
    private SignInManager<User> SignInManager { get; set; }

    private async Task LogOut()
    {
        await SignInManager.SignOutAsync();
    }
}
