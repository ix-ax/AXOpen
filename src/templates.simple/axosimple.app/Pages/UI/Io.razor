@page "/ui/io"
@using AXSharp.Connector
@using AXOpen.Data;
@inherits RenderableComponentBase




<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1>Inputs</h1>
            <RenderableContentControl Context="Entry.Plc.Inputs" Presentation="Control"/>
        </div>
        <div class="col">
            <h1>Outputs</h1>
            <RenderableContentControl Context="Entry.Plc.Outputs" Presentation="Control"/>
        </div>
    </div>
</div>




<div class="btn-group-vertical ">
    <button class="btn btn-primary m-2" @onclick=SetInputs>Set inputs</button>


    <button class="btn-primary btn m-2" @onclick=Clicked>External dialog close signal on</button>
    <button class="btn-primary btn m-2" @onclick=Clicked2>External dialog close signal off</button>
</div>

@code {
  
}
@functions
{
    private void SetInputs()
    {
        var inputs = Entry.Plc.Inputs.B0;
        foreach (var input in inputs)
        {
            input.Cyclic = true;
        }
    }

    private void Clicked()
    {
        Entry.Plc.Context.PneumaticManipulator.AutomatSequence._externalClose.Edit = true;
    }

    private void Clicked2()
    {
        Entry.Plc.Context.PneumaticManipulator.AutomatSequence._externalClose.Edit = false;
    }
}