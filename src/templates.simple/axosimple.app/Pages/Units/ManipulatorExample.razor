@page "/Units/ManipulatorExample"
@using AXOpen.Base.Dialogs;
@using Draggable
@using axosimple.hmi.Components;

@inject IAlertDialogService _alerts
@inherits RenderableComplexComponentBase<examples.PneumaticManipulator.CU>

<Unit Component="Entry.Plc.Context.PneumaticManipulator" Data="Entry.Plc.Context.ProcessDataPneumaticManipulator">
    <ChildContent>
        <DraggableContainer ImgSrc="logo-header.svg" Id="@Entry.Plc.Context.PneumaticManipulator.HumanReadable">
            @foreach (var axoObject in Entry.Plc.Context.PneumaticManipulator.GetChildren().Flatten(p => p.GetChildren()).OfType<AXOpen.Core.AxoObject>())
            {
                <DraggableItem AxoObject="axoObject" />
            }
        </DraggableContainer>
    </ChildContent>
</Unit>