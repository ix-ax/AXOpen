{
  "$schema": "http://json.schemastore.org/template",
  "author": "PTKu",
  "classifications": [ "AXOpen", "axolibrary" ],
  "identity": "librarytemplate",
  "name": "AXOpen Library Template",
  "shortName": "axolibrary",
  "tags": {
    "language": "C#",
    "type": "project"
  },  
  "sourceName": "librarytemplate",
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [".vs/**", ".cr/**", "app/.apax/**", "ctrl/.apax/**", ".apax/**", "**/bin/**", "**/obj/**" ]
        }
      ]
    }
  ],
  "symbols": {

    "projname": {
      "type": "parameter",
      "description": ".NET name",
      "datatype": "text",
      "defaultValue": "dotnetlibs",
      "replaces": "dotnetlibs",
      "fileRename" : "dotnetlibs"
    },     
    "axlibname":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"projname",
        "toLower": true
      },
      "defaultValue": "axolib",
      "replaces": "axolib"
    }, 
    "projnameLower":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"projname",
        "toLower": true        
      }
    },     
    "nameUpper":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"projname",
        "toLower": false
      }
    },   
    "name": {
      "type": "derived",
      "valueSource": "projnameLower",
      "valueTransform": "ReplaceDotsInFileName",
      "datatype": "text",
      "defaultValue": "twinConnectorName",
      "replaces": "twinConnectorName",
      "fileRename": "twinConnectorName",
      "description": "A value derived from the 'axlibname' prop, used to rename librarytemplate"
    }    
   
  },
  "forms": {
    "ReplaceDotsInFileName": {
      "identifier": "replace",
      "pattern": "\\.",        
      "replacement": "_"  
    },
    "DeleteDotsInFileName": {
      "identifier": "replace",
      "pattern": "\\.",        
      "replacement": ""  
    }
  } 
}

  