{
  "$schema": "http://json.schemastore.org/template",
  "author": "PTKu",
  "classifications": [ "AXOpen", "axolibrary" ],
  "identity": "librarytemplate",
  "name": "AXOpen Library Template",
  "shortName": "axolibrary",
  "tags": {
    "language": "C#",
    "type": "project"
  },  
  "sourceName": "librarytemplate",
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [".vs/**", ".cr/**", "app/.apax/**", "ctrl/.apax/**", ".apax/**", "**/bin/**", "**/obj/**" , "*.sln"  , "*.code-workspace" ]
        }
      ]
    }
  ],
  "symbols": {

    "projname": {
      "type": "parameter",
      "description": ".NET name",
      "datatype": "text",
      "defaultValue": "projname",
      "replaces": "projname",
      "fileRename" : "projname"
    },    
    "axlibname":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"projname",
        "toLower": true
      },
      "defaultValue": "axolib",
      "replaces": "axolib"
    },
    "namespace": {
      "type": "derived",
      "valueSource": "projname",
      "valueTransform": "notTransform",
      "datatype": "text",
      "defaultValue": "Template.Axolibrary",
      "replaces": "Template.Axolibrary"
    }, 
    "name": {
      "type": "derived",
      "valueSource": "axlibname",
      "valueTransform": "DeleteDotsInFileName",
      "datatype": "text",
      "defaultValue": "librarytemplate",
      "replaces": "librarytemplate",
      "fileRename": "librarytemplate",
      "description": "A value derived from the 'axlibname' prop, used to rename librarytemplate"
    }, 
    "apaxlibname": {
      "type": "derived",
      "valueSource": "projname",
      "valueTransform": "ConvertToLowerAndReplaceTheDots",
      "datatype": "text",
      "defaultValue": "apaxlibname",
      "replaces": "apaxlibname"
    },   
    "apaxappname": {
      "type": "derived",
      "valueSource": "projname",
      "valueTransform": "ConvertToLowerAndReplaceTheDots",
      "datatype": "text",
      "defaultValue": "apaxappname",
      "replaces": "apaxappname"
    },  
    "appconnectorname": {
      "type": "derived",
      "valueSource": "axlibname",
      "valueTransform": "ReplaceDotsInFileName",
      "datatype": "text",
      "defaultValue": "appconnectorname",
      "replaces": "appconnectorname",
      "fileRename": "appconnectorname",
      "description": "AX# connector name for testing application."
    },
    "renameDotNetTwinCsProjFileName": {
      "include" : "*.csproj",
      "exclude" : "apax.yml",
      "type": "derived",  
      "valueSource": "axlibname",  
      "valueTransform": "ReplaceDotsInFileName",  
      "fileRename": "axolib",  
      "description": "A value derived from the 'name' param, used to rename Application1.cs"
    },
    "renameDotNetTwinCsProjReferences": {
      "include" : "*.csproj",
      "exclude" : "apax.yml", 
      "type": "derived",  
      "valueSource": "axlibname",  
      "valueTransform": "ReplaceDotsInFileName",  
      "replaces": "axolib",  
      "description": "A value derived from the 'name' param, used to rename Application1.cs"
    },   
    "projnameLower":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"projname",
        "toLower": true
      }
    }, 
    
    "nameUpper":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"projname",
        "toLower": false
      }
    }
  },
  "forms": {
    "ReplaceDotsInFileName": {
      "identifier": "replace",
      "pattern": "\\.",        
      "replacement": "_"  
    },
    "DeleteDotsInFileName": {
      "identifier": "replace",
      "pattern": "\\.",        
      "replacement": ""  
    },
    "notTransform":{    
    },
    "ReplaceDots": {
      "identifier": "replace",
      "pattern": "\\.",        
      "replacement": "_"  
    },
    "ConvertToLower": {
      "identifier": "lowerCase"
    },
    "ConvertToLowerAndReplaceTheDots": {
      "identifier": "chain",
      "steps": [
        "ConvertToLower",
        "ReplaceDots"
      ]
    }

  } 
}