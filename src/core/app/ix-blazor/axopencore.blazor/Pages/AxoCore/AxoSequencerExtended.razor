@page "/AxoSequencerContainer"
@using axopencore
@using AXOpen.Core;
<h3>AxoSequencerContainer</h3>
@inherits RenderableComponentBase;

<div class="container">
    <div class="h4 pb-2 mb-4 text-primary border-bottom border-primary">
        Sequencer with few steps
        <br />
        <RenderableContentControl Context="@Entry.Plc.AxoSequencerContainer._SequencerContainerExample.Counter" Presentation="Control" />
    </div>
</div>

<h7>RenderableContentControl Context="@Entry.Plc.AxoSequencerContainer._SequencerContainerExample" Presentation="Command-Control"</h7>
<div class="container">
    <div class="container text-left">
        <RenderableContentControl Context="@Entry.Plc.AxoSequencerContainer._SequencerContainerExample" Presentation="Command-Control" />
    </div>
</div>

<h7>RenderableContentControl Context="@Entry.Plc.AxoSequencerContainer._SequencerContainerExample" Presentation="Status-Display"</h7>
<div class="container">
    <div class="container text-left">
        <RenderableContentControl Context="@Entry.Plc.AxoSequencerContainer._SequencerContainerExample" Presentation="Status-Display" />
    </div>
</div>

@code
{
    protected override void OnInitialized()
    {
        base.OnInitialized();
        this.UpdateValuesOnChange(@Entry.Plc.AxoSequencerContainer._SequencerContainerExample.Counter);
    }
}
