@page "/AxoMomentaryTaskDocu"
@using axopencore
@using AXOpen.Core;
<h3>AxoMomentaryTaskDocu</h3>

<div class="container">
    <div class="card">
        <div class="card-header d-flex">
            <div class="h4 p-0 w-100 mb-4 text-primary border-bottom border-primary">MomentaryTask example.</div>
        </div>
        <div class="card card-body">
            <div class="container text-left">
                <div class="row">
                    <div class="col">
                        <div class="card ps-2">
                            <label>Displayed using AxoMomentaryTaskView. Controlable as the value of Disable is FALSE"</label>
                            //<AxoMomentaryTaskViewControlable>
                                <AxoMomentaryTaskView Component="@Entry.Plc.AxoMomentaryTaskDocu._myMomentaryTask" Disable="false" />
                            //</AxoMomentaryTaskViewControlable>
                        </div>
                        <div class="card ps-2">
                            <label>Displayed using AxoMomentaryTaskView. Viewable only as the value of Disable is TRUE"</label>
                            //<AxoMomentaryTaskViewDisplayOnly>
                                <AxoMomentaryTaskView Component="@Entry.Plc.AxoMomentaryTaskDocu._myMomentaryTask" Disable="true" />
                            //</AxoMomentaryTaskViewDisplayOnly>
                        </div>
                        <div class="card ps-2">
                            <label>Rendered by using RenderableContentControl. Controllable as the Presentation is Command</label>
                            //<RenderableContentControlCommand>
                                <RenderableContentControl Context="@Entry.Plc.AxoMomentaryTaskDocu._myMomentaryTask" Presentation="Command" />
                            //</RenderableContentControlCommand>
                        </div>
                        <div class="card ps-2">
                            <label>Rendered by using RenderableContentControl. Viewable only as the Presentation is Status</label>
                            //<RenderableContentControlStatus>
                                <RenderableContentControl Context="@Entry.Plc.AxoMomentaryTaskDocu._myMomentaryTask" Presentation="Status" />
                            //</RenderableContentControlStatus>
                        </div>
                   </div>
                </div>
            </div>
        </div>
     </div>
</div>

