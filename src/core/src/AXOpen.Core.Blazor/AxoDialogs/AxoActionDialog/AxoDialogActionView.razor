@namespace AXOpen.Core
@using AXOpen.Core.Blazor.AxoDialogs;
@using AXOpen.Dialogs;
@using Microsoft.JSInterop;
@inject NavigationManager _navigationManager
@inject AxoDialogProxyService _dialogService
@inherits AxoDialogBaseView<AxoDialog>

<h1>Hello</h1>
<div class="offcanvas offcanvas-bottom @base.ShowDialog" data-bs-backdrop="static" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel" >
    <div class="text-center">
        <h3 class="offcanvas-title text-center" id="offcanvasExampleLabel">@Component._caption.Cyclic</h3>
        @if (IsYesNoCancelDialogType())
        {
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        }
    </div>
    <div class="offcanvas-body text-center col">


        <div class="row">
            <p>@Component._text.Cyclic</p>
        </div>
       

         

            @if (IsOkDialogType())
            {
                <button type="button" class="btn btn-primary" @onclick="DialogAnswerOk">Ok</button>
            }
            @if (IsYesNoDialogType() && IsYesNoCancelDialogType())
            {
                <button type="button" class="btn btn-primary" @onclick="DialogAnswerYes">Yes</button>
                <button type="button" class="btn btn-primary" @onclick="DialogAnswerNo">No</button>
            }
           @* @if (IsYesNoCancelDialogType())
            {
                <button type="button" class="btn btn-primary" @onclick="DialogAnswerYes">Yes</button>
                <button type="button" class="btn btn-primary" @onclick="DialogAnswerNo">No</button>
            }*@
            
       
       @* <div class="dropdown mt-3">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Dropdown button
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
        </div>*@
    </div>
</div>


@if (base.ShowBackdrop)
{
    <div class="offcanvas-backdrop fade show"></div>
}


