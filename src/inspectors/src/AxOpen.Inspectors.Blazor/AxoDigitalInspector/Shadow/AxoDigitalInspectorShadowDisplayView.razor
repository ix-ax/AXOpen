@namespace AXOpen.Inspectors
@inherits RenderableComplexComponentBase<AxoDigitalInspector>



<InspectorViewTemplate Data="Component._data"
                       Name="@getNameOrSymbol()"
                       Presentation="ShadowDisplay"
                       IsOverInspected="Component._axoInspectorDialog._isOverInspected.Shadow" />



@code {
    private string ID = "M" + Guid.NewGuid().ToString();

    public string getNameOrSymbol()
    {
        return string.IsNullOrEmpty(Component.AttributeName) ? Component.GetSymbolTail() : Component.AttributeName;
    }

    protected override void OnInitialized()
    {
        UpdateValuesOnChange(Component._data.Result);
    }
}
