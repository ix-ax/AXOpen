@page "/IxCoreRemoteTask"
@using intergrations
@using ix.framework.core;
<h3>IxTask</h3>

<div class="container">
    <div class="card">
        <div class="card-header d-flex">
            <div class="h4 p-0 w-100 mb-4 text-primary border-bottom border-primary">Simple Command Task Example.</div>
            <RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks._remoteTaskInvokeFromPlc" Presentation="Control"></RenderableContentControl>
        </div>
        <div class="card card-body">
            <div class="container text-left">
                <div class="row">
                    <div class="col">
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Command"</label>
                            <RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Command" Class="ps-2" />
                        </div>
                        <div class="card ps-2">
                            <label>IxTaskCommandView Component="@Entry.Plc.ixcore_remote_tasks._remoteTask" HideRestoreButton="true"</label>
                            <IxTaskCommandView Component="@Entry.Plc.ixcore_remote_tasks._remoteTask" HideRestoreButton="true" />
                        </div>
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Control"</label>
                            <RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Control" Class="card m-2 p-2" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Status"</label>
                            <RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Status" Class="ps-2" />
                        </div>
                        <div class="card ps-2">
                            <label>IxTaskStatusView Component="@Entry.Plc.ixcore_remote_tasks._remoteTask" HideRestoreButton="true"</label>
                            <IxTaskStatusView Component="@Entry.Plc.ixcore_remote_tasks._remoteTask" HideRestoreButton="true" />
                        </div>
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Display"</label>
                            <RenderableContentControl Context="@Entry.Plc.ixcore_remote_tasks" Presentation="Display" Class="card m-2 p-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
</div>

