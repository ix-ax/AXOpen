@page "/AxoMomentaryTask"
@using axopen_integrations
@using AXOpen.Core;
<h3>AxoMomentaryTask</h3>

<div class="container">
    <div class="card">
        <div class="card-header d-flex">
            <div class="h4 p-0 w-100 mb-4 text-primary border-bottom border-primary">Simple Momentary Task Example.</div>
        </div>
        <div class="card card-body">
            <div class="container text-left">
                <div class="row">
                    <div class="col">
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Command"</label>
                            <RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Command" Class="ps-2" />
                        </div>
                        <div class="card ps-2">
                            <label>AxoToggleTaskView Component="@Entry.Plc.AxoMomentaryTasks.MomentaryTaskExample" Disable=false </label>
                            <AxoMomentaryTaskView Component="@Entry.Plc.AxoMomentaryTasks.MomentaryTaskExample" Disable=false />
                        </div>
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Control"</label>
                            <RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Control" Class="card m-2 p-2" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Status"</label>
                            <RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Status" Class="ps-2" />
                        </div>
                        <div class="card ps-2">
                            <label>AxoToggleTaskView Component="@Entry.Plc.AxoMomentaryTasks.MomentaryTaskExample" Disable=true </label>
                            <AxoMomentaryTaskView Component="@Entry.Plc.AxoMomentaryTasks.MomentaryTaskExample" Disable=true />
                        </div>
                        <div class="card ps-2">
                            <label>RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Display"</label>
                            <RenderableContentControl Context="@Entry.Plc.AxoMomentaryTasks" Presentation="Display" Class="card m-2 p-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
</div>

